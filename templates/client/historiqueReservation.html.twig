{% extends 'baseClient.html.twig' %}

{% block title %}SS | Home{% endblock %}

{% block body %}


<div class="row" id="proBanner">
     
    </div>
    <div class="container-scroller">
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">


              <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Historique des reservations</h4>
                  <div class="table-responsive pt-3">
                
                    <table class="table table-bordered">
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                      {{ message }}
                    </div>
                  {% endfor %}
                  {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                      {{ message }}
                    </div>
                  {% endfor %}
                      <thead>
                        <tr>
                          {# <th>
                            ID
                          </th>
                          <th>
                            User
                          </th> #}
                          <th>
                            Event Title
                          </th>
                          <th>
                            Date reservation
                          </th>
                          <th>
                            Nombre de places
                          </th>
                          <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for res in reservations %}
                        <tr>
                          {# <td>
                            {{res.id}}
                          </td>
                          <td>
                            {{res.user.nom}}
                          </td> #}
                          <td>
                            {{res.event.titreEv}}
                          </td>
                          <td>
                            {{res.date| date('Y-M-D H:i:s')}}
                          </td>
                          <td>
                            {{res.nbPlaces}}
                          </td>
                          <td>
                          
                          <form action="{{path('app_reservation_delete', {'id': res.id})}}"  method="post">
                          
                          <button class="btn btn-info">Delete Event</button>
                          </form>
                          {# <form action="">
                          <button>Update Event</button>
                          </form> #}
                          
                          
                          
                          </td>
                          
                          
                          
                        </tr>
                        {% endfor %}

                      </tbody>
                    </table>
                    
                  </div>
                </div>
              </div>
            </div>
            </div>

          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
         
          <!-- partial -->
        </div>
        <!-- main-panel ends -->

      <!-- page-body-wrapper ends -->
    </div










{% endblock %}
