{% extends "baseAdmin.html.twig" %}

{% block title %}Liste des categories produits{% endblock %}


{% block body %}
<br>


                         
<hr>
<div class="card">
<table class="table">
                  {# //display flash messages from controller #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <thead>
                      <tr>
                        <th>titreEv</th>
                        <th>DescEv</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                    {% for cat in categories %}
                    
                      {% if loop.index == 1 %}
                        <tr class="table-secondary">
                      {% elseif loop.index == 2 %}
                            <tr class="table-primary">
                        {% elseif loop.index == 3 %}
                            <tr class="table-success">
                        {% elseif loop.index == 4 %}
                            <tr class="table-danger">
                        {% elseif loop.index == 5 %}
                            <tr class="table-warning">
                        {% elseif loop.index == 6 %}
                            <tr class="table-info">
                        {% elseif loop.index == 7 %}
                            <tr class="table-light">
                        {% elseif loop.index == 8 %}
                            <tr class="table-dark">
                        {% else %}
                            <tr class="table-info">
                        {% endif %}
                        {# les noms majuscules #}
                        {# {% set imageUrl = vich_uploader_asset(e, 'imageFile') %} #}
                        {# <td><img src="{{ asset(imageUrl) }}" alt="user-avatar" class="w-px-40 h-auto rounded-circle"></td> #}
                        <td>{{ cat.nom|upper }}</td>
                        <td>{{ cat.description }}</td>
                        {# <td>{{ prod.quantite }}</td>
                        {% if prod.photo %}
                            {% set imageUrl = vich_uploader_asset(prod, 'imageFile') %}
                            <td><img style="width:50px;" src="{{ asset(imageUrl) }}" alt="img" /></td>
                            {% endif %}
                        <td>{{ prod.categorie.nom }}</td>

                        {% if prod.etat == 1 %}
                        <td><span class="badge bg-label-info me-1">Published</span></td>
                        {% elseif prod.etat == -1 %}
                        <td><span class="badge bg-label-danger me-1"> Rejected</span></td>
                        {% else %}
                        <td><span class="badge bg-label-success me-1">Pending</span></td>
                        {% endif %} #}

                        <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                            {# <form action="{{path('app_updateEvent',{'id':cat.id})}}">
                              <button type="submit"  class="dropdown-item"  >
                                      <i class="bx bx-edit-alt me-1"></i> Edit
                              </button>
                            </form> #}

                            <form action="{{path('app_deleteProductType',{'id':cat.id})}}">
                                <button onclick="return confirm('Are you sure you want to delete this category?')"  class="dropdown-item">
                                    <i class="bx bx-trash me-1"></i> 
                                    Delete
                                </button>
                            </form>
                            </div>
                        </div>
                        </td>
                        </tr>



                    {% endfor %}


                    <!-- Modal -->
                  

                    </tbody>
                  </table>
                  <div style="margin-top:10px;margin-left:10px">
                  <i class='bx bx-arrow-back'></i>
                    <a href="{{path('app_products_list')}}">Back to product list</a>

                  </div>

</div>
                  {% endblock %}