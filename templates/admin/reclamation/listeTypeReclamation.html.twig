{% extends "baseAdmin.html.twig" %}

{% block title %}Liste des evenements{% endblock %}


{% block body %}
<br>
<div class=" col-md-8">
<div class="ml-5 card" style="margin-left:100px;">
<table class="table">
                  {# //display flash messages from controller #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <thead>
                      <tr>
                        <th>Nom</th>
                        <th>Actions</th> 
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                    {% for rec in reclamations %}
                    
                      {% if loop.index == 1 %}
                        <tr class="table-secondary">
                      {% elseif loop.index == 2 %}
                            <tr class="table-primary">
                        {% elseif loop.index == 3 %}
                            <tr class="table-success">
                        {% elseif loop.index == 4 %}
                            <tr class="table-danger">
                        {% elseif loop.index == 5 %}
                            <tr class="table-warning">
                        {% elseif loop.index == 6 %}
                            <tr class="table-info">
                        {% elseif loop.index == 7 %}
                            <tr class="table-light">
                        {% elseif loop.index == 8 %}
                            <tr class="table-dark">
                        {% else %}
                            <tr class="table-info">
                        {% endif %}
                        
                        <td>{{ rec.nom|upper }}</td>
                       

                        <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                            {# <form action="{{path('app_updatetypeReclamation',{'id':rec.id})}}">
                              <button type="submit"  class="dropdown-item"  >
                                      <i class="bx bx-edit-alt me-1"></i> Edit
                              </button>
                            </form> #}

                            <form action="{{path('app_deletetypeReclamation',{'id':rec.id})}}">
                                <button onclick="return confirm('Are you sure you want to delete this event type?')"  class="dropdown-item">
                                    <i class="bx bx-trash me-1"></i> 
                                    Delete
                                </button>
                            </form>

                            </div>
                        </div>
                        </td>
                        </tr>



                    {% endfor %}


                    <!-- Modal -->
                  

                    </tbody>
                  </table>
                <br>
                  <div class="text-center mb-3">
                    <h5><a href="{{path('app_reclamations_list')}}"> <i>Back to liste des reclamations</i> </a></h5>
                  </div>
                {# <br><br><br> #}

</div>
</div>
                  {% endblock %}