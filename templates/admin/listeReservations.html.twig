{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}


	<!-- Layout wrapper -->
	<div class="layout-wrapper layout-content-navbar">
		<div
			class="layout-container">
			<!-- Layout container -->
			<div
				class="layout-page">

				<!-- Content wrapper -->
				<div
					class="content-wrapper">
					<!-- Content -->
					<div class="container-xxl flex-grow-1 container-p-y">
						<div class="row">
							<div class="col-lg-12 mb-4 order-0">
								<div class="card">
									<div class="d-flex align-items-end row">
										<div class="col-md-12">
											<div
												class="card-body">


												<!-- Contextual Classes -->

												<div class="card">
													<h5 class="card-header">Liste des reservations</h5>
													<div class="table-responsive text-nowrap">
														<table
															class="table">
															{# //display flash messages from controller #}
															{% for message in app.flashes('success') %}
																<div class="alert alert-success">
																	{{ message }}
																</div>
															{% endfor %}
															{% for message in app.flashes('error') %}
																<div class="alert alert-danger">
																	{{ message }}
																</div>
															{% endfor %}


															<thead>
																<tr>
																	<th>User Name</th>
																	<th>Event Title</th>
																	<th>Date </th>
																	<th>Nombre de places</th>
																	
																</tr>
															</thead>
															<tbody class="table-border-bottom-0">

																{% for res in reservations %}

																	{% if loop.index == 1 %}
																		<tr class="table-secondary">
																		{% elseif loop.index == 2 %}
																			<tr class="table-primary">
																			{% elseif loop.index == 3 %}
																				<tr class="table-success">
																				{% elseif loop.index == 4 %}
																					<tr class="table-danger">
																					{% elseif loop.index == 5 %}
																						<tr class="table-warning">
																						{% elseif loop.index == 6 %}
																							<tr class="table-info">
																							{% elseif loop.index == 7 %}
																								<tr class="table-light">
																								{% elseif loop.index == 8 %}
																									<tr class="table-dark">
																									{% else %}
																										<tr class="table-info">
																										{% endif %}
																										
																										<td>{{ res.user.nom }}
																										</td>
																										<td>{{ res.event.titreEv }}</td>
																										<td>{{ res.date | date('Y-M-D') }}</td>
																										<td>{{ res.nbPlaces }}</td>
																										
																										
																									</tr>


																								{% endfor %}


																							</tbody>
																						</table>
																					</div>
																				</div>
																				<!--/ Contextual Classes -->
																				<br>
																				{# <div class="pagination">
																					{{ knp_pagination_render(users, 'pagination.html.twig') }}
																				</div> #}


																			</div>
																		</div>

																	</div>
																</div>
															</tbody>
														</div>

													</div>
												</div>
												<!-- / Content -->

											</div>
											<!-- Content wrapper -->
										</div>
										<!-- / Layout page -->
									</div>

									<!-- Overlay -->
								</div>
								<!-- / Layout wrapper -->


							{% endblock %}


