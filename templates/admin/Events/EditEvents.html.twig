{% extends "baseAdmin.html.twig" %}



{% block body %}

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-xxl">
                            <div class="card mb-4">
                                <div class="card-header d-flex align-items-center justify-content-between">
                                <h5 class="mb-0">Update event</h5>
                                </div>
                                <div class="card-body">
                                {{ form_start(form, {'attr': {'class': 'your-form-class'}}) }}
                                {% for message in app.flashes('success') %}
                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                {% endfor %}
                                {% for message in app.flashes('error') %}
                                        <div class="alert alert-danger">
                                            {{ message }}
                                        </div>
                                {% endfor %}
                                    <div class="row mb-1">
                                        <div class="col-sm-6">
                                            {{ form_row(form.titreEv, {'label': 'Titre', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_row(form.DescEv, {'label': 'Description', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-sm-6">
                                            {{ form_row(form.date_debut, {'label': 'Date Debut', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_row(form.date_fin, {'label': 'Date Fin', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-sm-6">
                                            {{ form_row(form.lieuEv, {'label': 'Lieu', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_row(form.nbMax, {'label': 'Nombre Max', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-sm-6">
                                            {{ form_row(form.imageFile, {'label': 'Image','required': false, 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_row(form.type, {'label': 'Event Type', 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    

                                    <div class="row mb-1">
                                    <div class="col-sm-8">
                                        {{ form_row(form.save, {'label': 'Confirm changes'}) }}
                                    </div>
                                    </div>
                                {{ form_end(form) }}
                                </div>
                            </div>
                            </div>

            </div>
        </div>
    </div>

{% endblock %}

