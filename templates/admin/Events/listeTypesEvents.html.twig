{% extends "baseAdmin.html.twig" %}

{% block title %}Liste des evenements{% endblock %}


{% block body %}
<br>
<div class="container">

  
                         
<hr>
<div class="card">
<table class="table">
                  {# //display flash messages from controller #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <thead>
                      <tr>
                        <th>Libelle</th>
                        {# <th>DescEv</th>
                        <th>lieuEv</th>
                        <th>datedebut</th>
                        <th>datefin</th>
                        <th>Image</th>
                        <th>Type</th>
                        <th>Actions</th> #}
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                    {% for e in events %}
                    
                      {% if loop.index == 1 %}
                        <tr class="table-secondary">
                      {% elseif loop.index == 2 %}
                            <tr class="table-primary">
                        {% elseif loop.index == 3 %}
                            <tr class="table-success">
                        {% elseif loop.index == 4 %}
                            <tr class="table-danger">
                        {% elseif loop.index == 5 %}
                            <tr class="table-warning">
                        {% elseif loop.index == 6 %}
                            <tr class="table-info">
                        {% elseif loop.index == 7 %}
                            <tr class="table-light">
                        {% elseif loop.index == 8 %}
                            <tr class="table-dark">
                        {% else %}
                            <tr class="table-info">
                        {% endif %}
                        {# les noms majuscules #}
                        {# {% set imageUrl = vich_uploader_asset(e, 'imageFile') %} #}
                        {# <td><img src="{{ asset(imageUrl) }}" alt="user-avatar" class="w-px-40 h-auto rounded-circle"></td> #}
                        <td>{{ e.libelle|upper }}</td>
                        {# <td>{{ e.DescEv }}</td>
                        <td>{{ e.lieuEv }}</td>
                        <td>{{ e.datedebut | date('Y-M-d') }}</td>
                        <td>{{ e.datefin | date('Y-M-d') }}</td>
                        {% if e.imageEv %}
                            {% set imageUrl = vich_uploader_asset(e, 'imageFile') %}
                            <td><img style="width:50px;" src="{{ asset(imageUrl) }}" alt="img" /></td>
                            {% endif %}
                        <td>{{ e.type.libelle }}</td> #}

                        {# {% if e.etat == 1 %}
                        <td><span class="badge bg-label-info me-1">Pending</span></td>
                        {% elseif e.etat == -1 %}
                        <td><span class="badge bg-label-danger me-1">Blocked</span></td>
                        {% else %}
                        <td><span class="badge bg-label-success me-1">Well</span></td>
                        {% endif %} #}

                        <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                            {# <form action="{{path('app_updateEvent',{'id':e.id})}}">
                              <button type="submit"  class="dropdown-item"  >
                                      <i class="bx bx-edit-alt me-1"></i> Edit
                              </button>
                            </form> #}

                            <form action="{{path('app_deleteEventType',{'id':e.id})}}">
                                <button onclick="return confirm('Are you sure you want to delete this event type?')"  class="dropdown-item">
                                    <i class="bx bx-trash me-1"></i> 
                                    Delete
                                </button>
                            </form>
                            {# <form action="{{path('app_blockU',{'id':user.id})}}">
                                <button onclick="return confirm('Are you sure you want to block this account?')"  class="dropdown-item">
                                    <i class='bx bx-block'></i>
                                    Block
                                </button>
                            </form> #}
                            {# <form action="{{path('app_approveU',{'id':user.id})}}">
                                <button onclick="return confirm('Are you sure you want to approve this account?')"  class="dropdown-item">
                                    <i class='bx bxs-user-check'></i>
                                    Unblock
                                </button>
                            </form> #}
                            </div>
                        </div>
                        </td>
                        </tr>



                    {% endfor %}


                    <!-- Modal -->
                  

                    </tbody>
                  </table>
                <br>
                  <div class="text-center mb-3">
                    <h5><a href="{{path('app_events_liste')}}"> <i>Back to liste d'événements</i> </a></h5>
                  </div>
                {# <br><br><br> #}

</div>
                  {% endblock %}